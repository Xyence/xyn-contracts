{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyn.example/schemas/BundleSpec.schema.json",
  "title": "BundleSpec",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "modules"
  ],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [
        "xyn.bundle/v1"
      ],
      "default": "xyn.bundle/v1"
    },
    "kind": {
      "type": "string",
      "const": "Bundle"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "namespace",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "namespace": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "description": {
      "type": "string"
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "fqn",
          "version"
        ],
        "properties": {
          "fqn": {
            "type": "string",
            "minLength": 1
          },
          "version": {
            "type": "string",
            "minLength": 1
          },
          "config": {
            "type": "object",
            "additionalProperties": true,
            "default": {}
          }
        }
      }
    },
    "compatibility": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  }
}
