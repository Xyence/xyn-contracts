{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyn.example/schemas/Operation.schema.json",
  "title": "Operation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "operationId",
    "releaseId",
    "type",
    "status",
    "createdAt"
  ],
  "properties": {
    "operationId": {
      "type": "string"
    },
    "releaseId": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "apply",
        "reconcile",
        "rollback",
        "destroy"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "queued",
        "running",
        "succeeded",
        "failed"
      ]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "startedAt": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "finishedAt": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "planId": {
      "type": [
        "string",
        "null"
      ]
    },
    "message": {
      "type": "string",
      "default": ""
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    }
  }
}