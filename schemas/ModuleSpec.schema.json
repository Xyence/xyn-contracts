{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyn.example/schemas/ModuleSpec.schema.json",
  "title": "ModuleSpec",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "module"
  ],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [
        "xyn.module/v1"
      ],
      "default": "xyn.module/v1"
    },
    "kind": {
      "type": "string",
      "const": "Module"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "namespace",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "namespace": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "description": {
      "type": "string"
    },
    "module": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "adapter",
            "service",
            "ui",
            "workflow",
            "schema",
            "infra",
            "lib"
          ]
        },
        "fqn": {
          "type": "string"
        },
        "capabilitiesProvided": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "interfaces": {
          "type": "object",
          "additionalProperties": true,
          "default": {}
        },
        "dependencies": {
          "type": "object",
          "additionalProperties": true,
          "default": {}
        }
      }
    }
  }
}
