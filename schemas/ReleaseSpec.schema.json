{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyn.example/schemas/ReleaseSpec.schema.json",
  "title": "ReleaseSpec",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "backend",
    "components"
  ],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [
        "xyn.seed/v1"
      ],
      "default": "xyn.seed/v1"
    },
    "kind": {
      "type": "string",
      "const": "Release"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "namespace"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "namespace": {
          "type": "string",
          "minLength": 1
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "backend": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "compose",
            "k8s"
          ]
        },
        "config": {
          "type": "object",
          "additionalProperties": true,
          "default": {}
        }
      }
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "image": {
            "type": "string",
            "minLength": 1
          },
          "build": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "context"
            ],
            "properties": {
              "context": {
                "type": "string",
                "minLength": 1
              },
              "dockerfile": {
                "type": "string",
                "default": "Dockerfile"
              },
              "imageName": {
                "type": "string",
                "minLength": 1
              },
              "target": {
                "type": "string"
              }
            }
          },
          "env": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "default": {}
          },
          "secretRefs": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "key": {
                  "type": "string"
                },
                "targetEnv": {
                  "type": "string"
                }
              }
            },
            "default": []
          },
          "ports": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "containerPort"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "containerPort": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "hostPort": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "protocol": {
                  "type": "string",
                  "enum": [
                    "tcp",
                    "udp"
                  ],
                  "default": "tcp"
                }
              }
            },
            "default": []
          },
          "volumeMounts": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "volume",
                "mountPath"
              ],
              "properties": {
                "volume": {
                  "type": "string",
                  "minLength": 1
                },
                "mountPath": {
                  "type": "string",
                  "minLength": 1
                },
                "readOnly": {
                  "type": "boolean",
                  "default": false
                }
              }
            },
            "default": []
          },
          "dependsOn": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "resources": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "cpu": {
                "type": "string"
              },
              "memory": {
                "type": "string"
              }
            },
            "default": {}
          },
          "restartPolicy": {
            "type": "string",
            "default": "always"
          },
          "healthcheck": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "oneOf": [
          {
            "required": [
              "image"
            ]
          },
          {
            "required": [
              "build"
            ]
          }
        ]
      }
    },
    "volumes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": [
              "dockerVolume",
              "bind"
            ]
          },
          "source": {
            "type": "string"
          },
          "options": {
            "type": "object",
            "additionalProperties": true,
            "default": {}
          }
        }
      },
      "default": []
    },
    "networks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": [
              "dockerNetwork",
              "external"
            ]
          },
          "options": {
            "type": "object",
            "additionalProperties": true,
            "default": {}
          }
        }
      },
      "default": []
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      },
      "default": []
    },
    "policy": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  }
}
