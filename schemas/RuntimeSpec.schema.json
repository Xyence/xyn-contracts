{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyn.example/schemas/RuntimeSpec.schema.json",
  "title": "RuntimeSpec",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "release",
    "deployments",
    "services"
  ],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [
        "xyn.seed/v1"
      ],
      "default": "xyn.seed/v1"
    },
    "kind": {
      "type": "string",
      "const": "Runtime"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "namespace"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "release": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "releaseId",
        "revision",
        "backend"
      ],
      "properties": {
        "releaseId": {
          "type": "string",
          "minLength": 1
        },
        "revision": {
          "type": "integer",
          "minimum": 1
        },
        "backend": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "compose",
                "k8s"
              ]
            },
            "config": {
              "type": "object",
              "additionalProperties": true,
              "default": {}
            }
          }
        }
      }
    },
    "networks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "volumes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "dockerVolume",
              "bind"
            ],
            "default": "dockerVolume"
          },
          "source": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "secrets": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "provider": {
            "type": "string",
            "default": "env"
          },
          "ref": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "deployments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "replicas",
          "podTemplate"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "replicas": {
            "type": "integer",
            "minimum": 0,
            "default": 1
          },
          "dependsOn": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "podTemplate": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "containers"
            ],
            "properties": {
              "labels": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "default": {}
              },
              "containers": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": [
                    "name",
                    "image"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "command": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "default": []
                    },
                    "args": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "default": []
                    },
                    "ports": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                          "containerPort"
                        ],
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "containerPort": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 65535
                          },
                          "publishedPort": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 65535
                          },
                          "protocol": {
                            "type": "string",
                            "enum": [
                              "tcp",
                              "udp"
                            ],
                            "default": "tcp"
                          }
                        }
                      },
                      "default": []
                    },
                    "env": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                          "name"
                        ],
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          },
                          "valueFromSecret": {
                            "type": "string"
                          }
                        }
                      },
                      "default": []
                    },
                    "volumeMounts": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                          "name",
                          "mountPath"
                        ],
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "mountPath": {
                            "type": "string"
                          },
                          "readOnly": {
                            "type": "boolean",
                            "default": false
                          }
                        }
                      },
                      "default": []
                    },
                    "resources": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "cpu": {
                          "type": "string"
                        },
                        "memory": {
                          "type": "string"
                        }
                      },
                      "default": {}
                    },
                    "healthcheck": {
                      "type": "object",
                      "additionalProperties": true
                    },
                    "livenessProbe": {
                      "type": "object",
                      "additionalProperties": true
                    },
                    "readinessProbe": {
                      "type": "object",
                      "additionalProperties": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "selector",
          "ports"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "selector": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "ports": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "port",
                "targetPort"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "targetPort": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "protocol": {
                  "type": "string",
                  "enum": [
                    "tcp",
                    "udp"
                  ],
                  "default": "tcp"
                }
              }
            }
          }
        }
      },
      "default": []
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      },
      "default": []
    }
  }
}
