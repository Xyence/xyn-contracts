{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyn.example/schemas/CapabilitySpec.schema.json",
  "title": "CapabilitySpec",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "apiVersion",
    "kind",
    "metadata"
  ],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [
        "xyn.capability/v1"
      ],
      "default": "xyn.capability/v1"
    },
    "kind": {
      "type": "string",
      "const": "Capability"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "description": {
      "type": "string"
    },
    "profiles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "spec": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  }
}
