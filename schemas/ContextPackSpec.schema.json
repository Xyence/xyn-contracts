{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xyn.example/schemas/ContextPackSpec.schema.json",
  "title": "ContextPackSpec",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "content"
  ],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [
        "xyn.contextpack/v1"
      ],
      "default": "xyn.contextpack/v1"
    },
    "kind": {
      "type": "string",
      "const": "ContextPack"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "scope",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "scope": {
          "type": "string",
          "enum": [
            "global",
            "namespace",
            "project"
          ]
        },
        "namespace": {
          "type": "string"
        },
        "projectKey": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "isActive": {
          "type": "boolean",
          "default": true
        },
        "isDefault": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "content": {
      "type": "string"
    },
    "appliesTo": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  }
}
